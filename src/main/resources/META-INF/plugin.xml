<idea-plugin>
    <id>com.dongqing.plugin.findviews</id>
    <name>FindViews</name>
    <vendor email="dong123qing@gmail.com" url="https://github.com/a741762308/FindViews">a741762308</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="241" until-build="241.*"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>
<!--    <depends>org.jetbrains.plugins.gradle</depends>-->
<!--    <depends>org.jetbrains.android</depends>-->
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.java</depends>

    <actions>
        <!-- Add your actions here -->
        <action id="findviews" class="com.dairy.findview.FindViewsAction" text="Find Views"
                description="Find view by id">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl U"/>
        </action>
        <action id="generateviews" class="com.dairy.findview.GenerateViewsAction" text="Generate Views"
                description="Generate code for findViewById ">
            <add-to-group group-id="XmlGenerateToolsGroup" anchor="before" relative-to-action="GenerateDTD"/>
            <keyboard-shortcut keymap="$default" first-keystroke="meta U" second-keystroke="ctrl U"/>
        </action>
        <action id="convertviewbinding" class="com.dairy.findview.ViewBindingConversionAction" text="Convert To View Binding"
                description="Convert to viewbinding">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl V B"/>
        </action>
    </actions>

</idea-plugin>
